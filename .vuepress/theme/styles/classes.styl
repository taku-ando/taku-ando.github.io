@import '~@theme/styles/variables.styl'

.container
  margin 0 auto
  padding 0 1rem
  @media (min-width $MQWide)
    max-width (($MQWide + $MQNarrow) / 2)
  @media (max-width $MQMobile - 1px)
    max-width $MQNarrow
    padding 0
.content
  @media (max-width $MQMobile - 1px)
    border-radius: 0

.main-div
  padding 1.5rem
  background-color #ffffff
  border-radius 5px
  @media (max-width $MQMobile - 1px)
    padding 1rem
  &:not(:first-child)
    margin-top 1rem
  &:not(:last-child)
    margin-bottom 1rem
    @media (max-width $MQMobile - 1px)
      margin-bottom 0.5rem
  > :first-child
    margin-top 0

.clearfix
  &::after
    display block
    clear both
    content ''
